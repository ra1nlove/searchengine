<?xml version="1.0" encoding="UTF-8"?>

<gora-otd>
  <table name="webpage"> <!-- optional descriptors for tables -->
    <family name="common"/>
    <family name="page"/><!-- This can also have params like compression, bloom filters -->
  </table>

  <class name="com.buptnsrc.search.resource.WebPage" keyClass="java.lang.String" table="webpage">
    <field name="url" family="common" qualifier="url"/>
    <field name="charset" family="common" qualifier="charset"/>
    <field name="status" family="common" qualifier="status"/>
    <field name="statusCode" family="common" qualifier="statuscode"/>
    <field name="fetchInterval" family="common" qualifier="interval"/>
    <field name="retriesSinceFetch" family="common" qualifier="retriestimes"/>
    <field name="fetchTime" family="common" qualifier="fetchtime"/>
    <field name="simhash" family="common" qualifier="md5"/>
    <field name="type" family="common" qualifier="type"/>
    <field name="keywords" family="page" qualifier="keywords"/>
    <field name="description" family="page" qualifier="description"/>
    <field name="title" family="page" qualifier="title"/>
    <field name="h1" family="page" qualifier="h1"/>
    <field name="content" family="page" qualifier="content"/>
    <field name="relate" family="common" qualifier="relate"/>
    <field name="bayes" family="common" qualifier="bayes"/>
    <field name="outlinks" family="outlinks"/>
    <field name="pagerank" family="common" qualifier="pagerank"/>
    <field name="scores" family="common" qualifier="score"/>
  </class>

</gora-otd>
